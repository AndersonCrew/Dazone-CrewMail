<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_4_8"
    android:layout_marginTop="@dimen/dimen_4_8"
    android:background="@color/color_mail_attach_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgMailCreateItemAttachDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dimen_4_8"
            android:background="@color/transparent"
            android:src="@drawable/detail_download_attach_ic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dimen_18_36"
            android:layout_toRightOf="@+id/imgMailCreateItemAttachDownload"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMailCreateItemAttachFileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="@dimen/dimen_4_8"
                android:layout_marginTop="@dimen/dimen_4_8"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/string_title_mail_create_attach_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14_28" />

            <TextView
                android:id="@+id/txtMailCreateItemAttachFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_4_8"
                android:layout_marginTop="@dimen/dimen_4_8"
                android:text="@string/string_title_mail_create_attach_size"
                android:textColor="@color/gray_compose_mail"
                android:textSize="@dimen/text_14_28" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgMailCreateItemAttachDelete"
            android:layout_width="@dimen/dimen_15_30"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimen_4_8"
            android:layout_marginRight="@dimen/dimen_4_8"
            android:layout_marginTop="@dimen/dimen_4_8"
            android:background="@color/transparent"
            android:src="@drawable/add_delete_attach_ic"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_margin="5dip" />

</LinearLayout>